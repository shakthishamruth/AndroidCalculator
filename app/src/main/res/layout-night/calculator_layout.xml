<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calculatorParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Numbers"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/expressionTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="36dp"
            android:text="111"
            android:textSize="40sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/Numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">


        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/red"
            android:text="C"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/buttonC"
            android:backgroundTint="@color/red"
            android:text="⌫" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonC"
            android:layout_margin="4dp"
            android:text="7"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonC"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/button7"
            android:text="8"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonC"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/button8"
            android:text="9"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonBack"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/button9"
            android:text="."
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button7"
            android:layout_margin="4dp"
            android:text="4"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button8"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/button4"
            android:text="5"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button9"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/button5"
            android:text="6"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonDot"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/button6"
            android:text="÷"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button4"
            android:layout_margin="4dp"
            android:text="1"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button5"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/button1"
            android:text="2"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button6"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/button2"
            android:text="3"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonDivide"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/button3"
            android:text="×"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button1"
            android:layout_margin="4dp"
            android:text="0"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button2"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/button0"
            android:text="-"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button3"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/buttonMinus"
            android:text="+"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonMultiply"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/buttonPlus"
            android:hapticFeedbackEnabled="true"
            android:text="="
            android:textSize="32sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>